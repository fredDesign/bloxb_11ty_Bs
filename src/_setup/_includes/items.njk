<div class="row justify-content-center">
<section class="col-10 {% if loop.first %} mb-3 {% else %} my-5 {% endif %}">
  <div class="row justify-content-center">
    {% if item.data.thumb %}
      <div class="col-md-3">
        <a href="{{ defaultURL | url }}" class="h3 family-emphasis font-weight-bold text-primary d-block mb-1">
          <img class="w-100 img-fluid rounded" src="{{ item.data.thumb }}" alt="{{ item.data.title }} image">
        </a>
      </div>
    {% endif %}

    <div class="{% if item.data.thumb %}col-md-9 pl-md-4{% else %} col-m {% endif %}">
      <time class="d-block family-sans text-muted" datetime="{{ item.date }}">{{ item.date | simpleDate | safe }}</time>
      <a href="{{ defaultURL | url }}" class="h3 family-emphasis font-weight-bold text-primary d-block mb-1">{{ item.data.title | safe }}</a>
      <p class="lead mb-1 font-serif text-muted">{{ item.data.summary | safe }}</p>
      {% include "links.njk" %}
      {% include "tags.njk" %}
    </div>
  </div>
</section> 
</div>